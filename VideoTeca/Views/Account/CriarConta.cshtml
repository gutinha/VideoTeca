@model VideoTeca.Models.usuario
@{
    ViewBag.Title = "Criar conta";
}

<h2>Preencha o formulário:</h2>



@using (Html.BeginForm("CriarConta", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "cadastrarUsuario", autocomplete = "on" }))
{
        <div class="form-floating mb-3">
            <input id="floatingInputnome" name="nome" type="text" placeholder="Digite seu nome completo" class="form-control" required="required" />
            <label for="floatingInputnome">Nome completo*:</label>
        </div>

        <div class="form-floating mb-3">
            <input id="login" name="login" placeholder="Digite seu email" type="email" class="form-control" required="required" />
            <label for="login" class="control-label">Email*:</label>
        </div>

        <div class="form-floating mb-3">
            <input id="password" name="password" type="password" placeholder="Digite sua senha" class="form-control" required="required" />
            <label for="password" class="control-label">Senha*:</label>
        </div>

    <p class="infoCamposObrigatorios">* Campos obrigatórios!</p>
    <br />
    <a id="btn-back" href="@Url.Action("Index", "Home")" class="btn btn-info">Voltar</a>
    <button type="submit" class="btn btn-success" id="btnEnvia" name="btnEnvia">
        <span class="fa fa-save fa-w-2"></span>&nbsp;&nbsp;Salvar
    </button>

}
