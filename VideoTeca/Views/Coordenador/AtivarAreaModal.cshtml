@using VideoTeca.Models
@model area
@{
    ViewBag.Title = "Ativar Área";
    Layout = null;
    List<subarea> subareas = ViewBag.Subareas;
}
<style type="text/css">

    /*para resolver bug do multiselect*/
    div#subarea > span.select2.select2-container.select2-container--default {
        border: none;
    }

    .infoCamposObrigatorios {
        margin-top: 100px;
    }
</style>

<div class="modal-dialog modal-xl">
    <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">Ativar Área</h4>
            <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">
            <div class="row">
                <div class="col ">
                    <div class="card">
                        <div class="card-header text-white bg-primary" style="font-size: 28px;">Dados da Área</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="form-group col-lg-7" id="BuscaSecurity">
                                            <label for="IdArea" class="control-label">Área:</label>
                                            <br />
                                            <input id="IdArea" value="@Model.nome" autocomplete="off" type="text" class="form-control" tabindex="4" disabled="" color: #0c0c0c; />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-lg-2" id="subarea">
                                            <label for="Areas" class="control-label">Subáreas vinculadas:</label>
                                            <br />
                                            <select class="form-control" id="Subarea" name="Subarea[]" multiple="multiple" tabindex="14" style="color: #0c0c0c; height: 100px" disabled>
                                                @foreach (var subarea in subareas)
                                                {
                                                    <option selected value="@subarea.id">@subarea.nome</option>
                                                }
                                            </select>
                                            <br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </div>
        <div class="modal-footer">
            @using (Html.BeginForm())
            {
                <input id="idArea" name="idArea" type="hidden" value="@Model.id">
                <button type="submit" class="btn btn-success">Ativar</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="fecharBtn">Fechar</button>
            }
        </div>

    </div>
</div>

<script>
    $('#Subarea').select2({
        placeholder: "Selecionar...",
        language: {
            noResults: function () {
                return "Não Encontrado.";
            },
            searching: function () {
                return "Procurando...";
            }
        }
    });

</script>
